<script>
    // Scroll Bar Animation //
    $(window).scroll(function() {
        var scroll = $(window).scrollTop(),
        dh = $(document).height(),
        wh = $(window).height();
        scrollPercent = (scroll / (dh - wh)) * 100;
        $('.progress-bar').css('height', scrollPercent + "%");
    })

    // gsap animations //
    const tl = gsap.timeline({
        defaults: {
            ease: "power1.out"
        }
    });

    tl.to(".text", {
        y: "0%", duration: 1, stagger: 0.25, delay: 0.2
    });
    tl.to(".slider", {
        y: "-100%", duration: 1.5, delay: 0.5
    });
    tl.to(".intro", {
        y: "-100%", duration: 1
    }, "-=1");
    tl.fromTo("nav", {
        opacity: 0
    }, {
        opacity: 1, duration: 1
    });

    gsap.from('.aman', {
        opacity: 0, duration: 1, y: 20, delay: 3.5, ease: 'elastic(1 , 0.3)'
    });

</script>